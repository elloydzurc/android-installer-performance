<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <android.support.percent.PercentRelativeLayout
        app:layout_widthPercent="100%"
        android:id="@+id/dataPanelValue"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <android.support.percent.PercentRelativeLayout
            style="@style/listPanelContainer"
            app:layout_widthPercent="20%"
            android:id="@+id/openPanel">

            <TextView
                style="@style/listPanelOpenIcon"
                app:layout_widthPercent="100%"
                android:id="@+id/openIcon" />

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            style="@style/listPanelContainer"
            app:layout_widthPercent="20%"
            android:layout_toRightOf="@id/openPanel"
            android:id="@+id/disPanel">

            <TextView
                style="@style/listPanelDisIcon"
                app:layout_widthPercent="100%"
                android:id="@+id/disIcon" />

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            style="@style/listPanelContainer"
            app:layout_widthPercent="20%"
            android:layout_toRightOf="@id/disPanel"
            android:id="@+id/ackPanel">

            <TextView
                style="@style/listPanelAckIcon"
                app:layout_widthPercent="100%"
                android:id="@+id/ackIcon" />

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            style="@style/listPanelContainer"
            app:layout_widthPercent="20%"
            android:layout_toRightOf="@id/ackPanel"
            android:id="@+id/complePanel">

            <TextView
                style="@style/listPanelCompleteIcon"
                app:layout_widthPercent="100%"
                android:id="@+id/completeIcon" />

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            style="@style/listPanelContainer"
            app:layout_widthPercent="20%"
            android:layout_toRightOf="@id/complePanel"
            android:id="@+id/rsoPanel">

            <TextView
                style="@style/listPanelRsoIcon"
                app:layout_widthPercent="100%"
                android:id="@+id/rsoIcon" />

        </android.support.percent.PercentRelativeLayout>

     </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        style="@style/mapChartPanel"
        app:layout_widthPercent="100%"
        android:layout_below="@id/dataPanelValue"
        android:id="@+id/mapChartPanel">

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>